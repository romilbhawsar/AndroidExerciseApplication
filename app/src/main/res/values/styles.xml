<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- List title style -->
    <style name="StyleListTitle">
        <item name="android:textColor">@color/colorListTitle</item>
        <item name="android:paddingBottom">@dimen/view_padding_8</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- List description style -->
    <style name="StyleListDescription">
        <item name="android:textColor">@color/colorListDescription</item>
        <item name="android:layout_marginRight">@dimen/view_margin_5</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!--Alert dialog theme-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
